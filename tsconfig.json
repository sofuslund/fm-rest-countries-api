{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "strict": true,
        "lib": ["ES2017", "DOM", "DOM.Iterable"],
        "typeRoots": ["./node_modules/@types", "./src/types"]
    },

    "references": [
        {
            "path": "./tsconfig.config.json"
        }
    ]
}
